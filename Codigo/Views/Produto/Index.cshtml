@model ByGrace.Model.ProdutosModel

@{

    ViewData["Title"] = "Listagem de produtos";

}

<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="max-width:max-content;">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/imgs/banner01.png" alt="Primeiro Slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/imgs/banner02.png" alt="Segundo Slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/imgs/banner03.png" alt="Terceiro Slide">
            </div>
        </div>
    </div>

    <a class="whatsapp-link" href="https://web.whatsapp.com/send?phone=553199143508" target="_blank">
        <i class="fa fa-whatsapp"></i>
    </a>

    <br>
    <br>
    <section class="secao4" id="sobre">
        <div class="secao4-div">
            <!-- Card 1 -->
            <div class="secao4-div-card">
                <img decoding="async" src="/imgs/pix.svg" alt="Pagamento Parcelado">
                <h3>Pague via PIX</h3>
                <p></p>
            </div>

            <!-- Card 2 -->
            <div class="secao4-div-card">
                <img decoding="async" src="/imgs/troca.svg" alt="Garantia">
                <h3>Primeira troca grátis</h3>
                <p>você tem 30 dias</p>
            </div>

            <!-- Card 3 -->
            <div class="secao4-div-card">
                <img decoding="async" src="/imgs/cadeado.svg" alt="Compra segura">
                <h3>Compra 100% segura</h3>
                <p>Seus dados protegidos</p>
            </div>
        </div>
    </section>


    <div style="display: flex">

        
        @if (Model.TipoCliente == Constantes.Constantes.TipoCliente.Administrador)
        {
            <h1>Produtos</h1>
            <a href="/Produto/Incluir" style="text-decoration: none;"><button type="button" title="Novo produto" class="btn novoProduto" style="margin-bottom: 10px; width: auto;  background-color: #CA696A !important; color: #fff; margin-left: 15px; margin-top: 16px">+ Adicionar produto</button></a>
        } else
        {
            <h1>Lançamentos</h1>
        }

    </div>
    

    <div class="row mt-3">
    @foreach (var prod in Model.ProdutosLista)
    {
        <div class="col-md-2 mb-3">
                <div class="card card_produtos" id="card_@prod.CodigoProduto" data-id="@prod.CodigoProduto" style="cursor: pointer;max-width: max-content;width: 300px;min-height: 410px; max-height: 565px !important;">
                    <div class="card-img bg-image hover-overlay ripple" data-mdb-ripple-color="light" data-id="@prod.CodigoProduto">
                        <img class="img-fluid" style="height: 240px; border-radius: 10px 10px 0 0; object-fit: cover" src="@Url.Action("ObterImagem", "Produto", new { id = prod.CodigoProduto })" alt="Imagem do Produto" />
                        <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                    </a>
                </div>

                <div class="card-body" data-id="@prod.CodigoProduto">
                        <h4 class="card-title" title="@prod.NomeProduto" style="color: #CA696A">@(prod.NomeProduto.Length > 40 ? prod.NomeProduto.Substring(0, 100) + "..." : prod.NomeProduto)</h4>
                        <p class="card-text" title="@prod.DescricaoProduto">
                        @(prod.DescricaoProduto.Length > 100 ? prod.DescricaoProduto.Substring(0, 100) + "..." : prod.DescricaoProduto)
                        </p>

                   
                        
                </div>
                <div>
                        <h5 class="text-thin"style="color: #CA696A; padding: 1rem 1rem;">R$ @Rotinas.FormatarValor(prod.ValorProduto)</h5>
                </div>

                    @{
                        if(Model.TipoCliente == Constantes.Constantes.TipoCliente.Administrador)
                        {
                            <div class="card-footer">
                                <button type="button" class="btn btn-outline-danger deletarProduto" id="deletarProduto_@prod.CodigoProduto" data-id="@prod.CodigoProduto" style="margin-bottom: 10px; width: auto;">Excluir</button>
                                <button type="button" class="btn btn-outline-warning" style="margin-bottom: 10px; width: auto; float: right"><a href="/Produto/Alterar/@prod.CodigoProduto" style="text-decoration: none;" class="text-warning"> Alterar</a></button>
                            </div>
                        } else
                        {
                            <div class="card-footer">
                                <button type="button" class="btn adicionarCarrinho" id="adicionarCarrinho_@prod.CodigoProduto" data-id="@prod.CodigoProduto" style="margin-bottom: 10px; width: 100%; background-color: #CA696A !important; color: #fff">Incluir ao carrinho</button>
                            </div>
                        }

                }
                    
            </div>
        </div>
    }
    </div>

    @if (Model.TipoCliente != Constantes.Constantes.TipoCliente.Administrador)
    {
        <div style="display: flex">
            <h1>Novos produtos</h1>
        </div>
            <div class="row mt-3">
                @foreach (var prod in Model.ProdutosLista.Where(p => p.DataCadastroProduto > DateTime.Now.AddDays(-7) && p.DataCadastroProduto < DateTime.Now))
                {
                    <div class="col-md-2 mb-3">
                        <div class="card card_produtos" id="card_@prod.CodigoProduto" data-id="@prod.CodigoProduto" style="cursor: pointer;max-width: max-content;width: 300px;min-height: 410px; max-height: 565px !important;">
                            <div class="card-img bg-image hover-overlay ripple" data-mdb-ripple-color="light" data-id="@prod.CodigoProduto">
                            <img class="img-fluid" style="height: 240px; border-radius: 10px 10px 0 0; object-fit: cover" src="@Url.Action("ObterImagem", "Produto", new { id = prod.CodigoProduto })" alt="Imagem do Produto" />
                                <a href="#!">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                                </a>
                            </div>

                            <div class="card-body" data-id="@prod.CodigoProduto">
                                <label class="tag-label">Lançamento</label>
                            <h4 class="card-title" title="@prod.NomeProduto" style="color: #CA696A">@(prod.NomeProduto.Length > 40 ? prod.NomeProduto.Substring(0, 100) + "..." : prod.NomeProduto)</h4>
                                <p class="card-text" title="@prod.DescricaoProduto">
                                    @(prod.DescricaoProduto.Length > 100 ? prod.DescricaoProduto.Substring(0, 100) + "..." : prod.DescricaoProduto)
                                </p>



                            </div>
                            <div style="display: flex">
                                <h5 class="text-thin" style="color: #CA696A; padding: 1rem 1rem;">R$ @Rotinas.FormatarValor(prod.ValorProduto)</h5>
                                <h5 class="text-thin text-riscado" style="color: #bababa; font-size: 15px; padding: 1rem 1rem; margin-top: 3px;">R$ @Rotinas.FormatarValor(prod.ValorProduto*1.1)</h5>
                            </div>

                            @{
                                if (Model.TipoCliente == Constantes.Constantes.TipoCliente.Administrador)
                                {
                                    <div class="card-footer">
                                        <button type="button" class="btn btn-outline-danger deletarProduto" id="deletarProduto_@prod.CodigoProduto" data-id="@prod.CodigoProduto" style="margin-bottom: 10px; width: auto;">Excluir</button>
                                        <button type="button" class="btn btn-outline-warning" style="margin-bottom: 10px; width: auto; float: right"><a href="/Produto/Alterar/@prod.CodigoProduto" style="text-decoration: none;" class="text-warning"> Alterar</a></button>
                                    </div>
                                }
                                else
                                {
                                    <div class="card-footer">
                                        <button type="button" class="btn adicionarCarrinho" id="adicionarCarrinho_@prod.CodigoProduto" data-id="@prod.CodigoProduto" style="margin-bottom: 10px; width: 100%; background-color: #CA696A !important; color: #fff">Incluir ao carrinho</button>
                                    </div>
                                }

                            }

                        </div>
                    </div>
                }
            </div>

        
    }

   
</body>
<footer class="text-center bg-white">
    <div class="card card-footer text-center">
        <div class="card-header" style="background-color: #fff">
            Metodos de pagamento
        </div>
        <div class="card-body">
            <h5 class="card-title">Aceitamos as seguintes bandeirolas</h5>
            <p>
                <img src="/imgs/metododepagamentos.png" width="300" height="60"
                     class="image wp-image-10850 attachment-medium size-medium" alt="Bandeiras de pagamento">
            </p>

        </div>
    </div>




    <div class="text-center p-3" style="background-color:white;">
        © 2024 Todos os Direitos Reservados | Desenvolvido por
        <a class="text-body" href="https://github.com/ICEI-PUC-Minas-PPLES-TI/plf-es-2024-1-ti3-8981100-bygrace">
            Grupo
            do TIS
        </a>
    </div>
</footer>
</html>

