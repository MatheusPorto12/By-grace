          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
        
    <style>

        img {
            width: 35vh;
        }

        .cabeçalho {
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .cabeçalho.scroll {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* Adiciona uma sombra leve na parte inferior */
                transition: box-shadow 0.5s ease; /* Adiciona uma transição suave */
            }

        .li_div {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }

            .li_div li {
                display: inline-flex;
                color: #CA696A;
                padding-left: 2%;
                margin-top: 3px;
                margin-bottom: 3px;
            }

                .li_div li a {
                    color: #CA696A;
                    text-decoration: none;
                }

                    .li_div li a:hover {
                        color: #5B2508;
                    }

        .icon_div a {
            color: #CA696A;
            text-decoration: none;
            font-weight: bold;
        }

        .logo_img {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .icon_div a i {
            font-size: 24px;
            color: #CA696A;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo_img {
            flex-grow: 1;
            text-align: center;
        }

        .icon_div {
            display: flex;
            gap: 20px;
        }

            .icon_div a {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

        .cart-count {
            position: absolute;
            background-color: #5B2508;
            right: 0.01px;
            color: white;
            border-radius: 50%;
            padding: 2px 5px;
            font-size: 0.8em;
        }

        .produtos img {
            width: 100%;
        }

        .produtos {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        h1 {
            color: #5B2508;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .secao4 {
            margin: 0;
            font-family: Helvetica, sans-serif;
        }

        .secao4-div {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 10px;
            text-align: center;
        }

        .secao4-div-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: calc(100% / 3 - 60px);
            margin: 10px;
            padding: 20px;
            box-shadow: 2px 2px 16px 0px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            background-color: white;
            transition: all 0.5s ease;
        }

            .secao4-div-card:hover {
                transform: scale(1.1);
                z-index: 1;
            }

            .secao4-div-card img {
                width: 15%;
                height: auto;
            }

            .secao4-div-card h3 {
                margin-bottom: 0px;
            }

        .whatsapp-link {
            position: fixed;
            width: 60px;
            height: 60px;
            bottom: 40px;
            right: 40px;
            border-radius: 50px;
            background-color: #25d366;
            text-align: center;
            font-size: 30px;
            box-shadow: 1px 1px 2px #888;
            z-index: 1000;
        }

            .whatsapp-link i {
                color: white;
                background: transparent; /* Adiciona transparência ao fundo do ícone */
            }

        a.whatsapp-link {
            text-decoration: none; /* Remove o sublinhado */
            color: inherit; /* Herda a cor do elemento pai */
        }

            a.whatsapp-link:hover {
                text-decoration: none; /* Remove o sublinhado quando o mouse passa por cima */
            }

        .fa-whatsapp {
            margin-top: 16px;
        }

        .tag-label{
            font-size: 10px;
            background-color: #ca696a;
            color: #fff;
            padding: 5px;
            border-radius: 6px;
        }

        .text-riscado{
            text-decoration: line-through;
        }

        @@media (max-width: 768px) {
            .secao4-div-card {
                width: 100%;
            }
        }
    </style>
    
}

