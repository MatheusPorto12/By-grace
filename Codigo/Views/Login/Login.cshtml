@page
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">Iniciar sessão</h1>

<div class="row">
    <label>Email</label>
    <input type="email" id="emailInput" class="form-control" />

    <label style="margin-top: 2rem;">Senha</label>
    <input type="password" id="senhaInput" class="form-control" />

    <input class="form-control btn btn-dark" style="margin-top: 2rem;" id="btn_login" type="submit" value="Logar">
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/Login/login.js"></script>
