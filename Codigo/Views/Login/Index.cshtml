@{ViewData["Title"] = "Login";}
<div class="container">    
        <div class="form_goup_login" style="margin-top: 12rem">
        <p style="font-size:180%;">Iniciar sessão<p><br>
                <div class="input-container">
                <input class="form-control" type="email" id="emailInput" placeholder="Usuário" name="usrnm">
                    <i class="fa fa-user icon"></i>
                </div>
                <div class="input-container">
                <input class="form-control" type="password" id="senhaInput" placeholder="Senha" name="psw">
                    <i class="fa fa-eye icon eye-open" onclick="toggleEye()" id="eyeIcon"></i>
                </div>
            <input class="form-control" id="btn_login" type="submit" value="ENTRAR">
            <a id="cadastro" href="/Cadastro">
                    <p style="font-size: 80%;">Não possui conta? <strong>Criar conta</strong></p>
                </a>
        </div>
    @section css{
    <style>
            * {
                padding: 0;
                margin: 0;
                font-family: 'Hallway', sans-serif;
                background-color: white;
            }
            body {
                align-items: center;
                justify-content: center;
                display: flex;
                height:100vh;
                margin: 0;
            }

            .form_goup_login {
                position:relative;
                top: -100px;
                
            }
            p {
                justify-content: center;
                text-align: center;
                display: block;
                color: #5B2508;
                font-size: 20px;
            }
            input {
                justify-content: left;
                align-items: left;
                background-color: rgb(255, 255, 255);
                border: 1px solid;
                height: 30px;
                border-color: #CA696A;
                border-radius: 2px;
                margin-top: 10px;
                margin-inline-start: 10px;
                margin-bottom: 10px;
                width: 230px;
            }

            input[type="email"],
            input[type="text"],
            input[type="password"] {
                background-color: #ffffff;
                border: 1px solid #CA696A;
                border-radius: 2px;
                height: 30px;
                margin-top: 10px;
                margin-inline-start: 10px;
                margin-bottom: 10px;
                width: 230px;
                padding-left: 10px; 
            }

                #btn_login {
                justify-content: center;
                align-items: center;
                line-height: 10px;
                background-color: white;
                border: 1px solid;
                border-radius: 0;
                height: 30px;
                border-color: #5B2508;
                margin-top: 10px;
                margin-inline-start: 10px;
                margin-bottom: 10px;
                width: 230px;
                color: #5B2508;
                transition: background-color 0.5s ease, color 0.5s ease;
            }
                #btn_login:hover {
                    background-color: #5B2508;
                    color: white;
                }
           
            .input-container {
                position: relative;
                color: #CA696A;
            }
            .icon {
                position: absolute;
                right: 0.5em;
                top: 50%;
                transform: translateY(-50%);
                font-size: 1.5em;
                max-width: 24px;
                max-height: 24px;
                color: #CA696A;
                ;
            }

            .eye-open {
                content: url('/imgs/eye-open.svg');
            }
            .eye-closed {
                content: url('/imgs/eye-closed.svg');
            }
            a {
                text-decoration: none;
            }
            input::placeholder {
                text-align: left;
                padding-left: 4px;
                font-size: 15px;
                color: #CA696A;
            }
            .ss {
                text-align: right;
                font-size: small;
            }
            .form_goup_login {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

    </style>}
    @section scripts {
    <script>
        function toggleEye() {
            var x = document.getElementById("senhaInput");
            var eyeIcon = document.getElementById("eyeIcon");
            if (x.type === "password") {
                x.type = "text";
                eyeIcon.classList.remove("eye-open");
                eyeIcon.classList.add("eye-closed");
            } else {
                x.type = "password";
                eyeIcon.classList.remove("eye-closed");
                eyeIcon.classList.add("eye-open");
            }
            }</script>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/Login/login.js"></script>
    }
</div>
