<div class="nav-max">
    <header id="nav-header">
        <a class="box nav-link" href="#"></a>
        <h1>Menu</h1>
    </header>
    <button id="toggle-nav-btn" class="circle"></button>
    <br>
    <hr>
    <ul class="menu">
        <li>
            <a class="nav-link" href="#">
                <div class="box"></div>
                <span id="alterarUsuario">Alterar usuário</span>
            </a>
        </li>
        <li>
            <a class="nav-link" href="#">
                <div class="box"></div>
                <span id="pedidosUsuario" href="#">Pedidos</span>
            </a>
        </li>
        <li>
            @if (@Model.cliente.TipoCliente == Constantes.Constantes.TipoCliente.Administrador)
            {
                <a class="nav-link" href="#">
                    <div class="box"></div>
                    <span id="indicadoresGerais" href="#">Indicadores</span>
                </a>
            }
        </li>
    </ul>
</div>

