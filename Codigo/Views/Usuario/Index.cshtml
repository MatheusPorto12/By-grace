        .container {
            padding: 0 !important;
            margin: 0 !important;
            font-family: sans-serif;
            background-color: white !important;
        }

        h2 {
            background-color: #CA696A !important;
            text-align: center !important;
            height: 3vh !important;
            font-size: 2vh !important;
            color: #ffff !important;
            justify-content: center !important;
            padding: 1px !important;
        }

        img {
            width: 30vh !important;
        }

        .li_div li {
            display: inline-flex !important;
            color: #CA696A !important;
            padding-left: 9% !important;
            margin-top: 2px !important;
        }

        .logo_img {
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
        }

        h1 {
            color: #5B2508 !important;
            margin-top: 10px !important;
            margin-bottom: 10px !important;
        }

        .form-cadastro {
            padding-left: 18vh !important;
        }

            .form-cadastro input {
                font-size: 14px !important;
                padding: 5px 10px !important;
                width: 100% !important;
                outline: none !important;
                background: #FFFFFF !important;
                color: #000000 !important;
                border: 1px solid #CBCBCB !important;
                border-radius: 10px !important;
                box-shadow: 3px 3px 2px 0px #E2E2E2 !important;
                transition: .3s ease !important;
            }

                .form-cadastro input:focus {
                    background: #F2F2F2 !important;
                    border: 1px solid #CA696A !important;
                    border-radius: 10px !important;
                }

            .form-cadastro label {
                color: #5B2508 !important;
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif !important;
            }

        ::placeholder {
            text-align: center !important;
        }

        .form-group-endereco {
            display: inline-block !important;
            flex-direction: column !important;
        }

        .form-group-password {
            display: flex !important;
            flex-direction: column !important;
        }

        .submit_bttn {
            color: white !important;
            background-color: #CA696A !important;
            border: none !important;
            width: 100px !important;
            height: 30px !important;
            float: right !important;
            margin-right: 20vh !important;
            cursor: pointer !important;
        }

        #buttonAlterar {
            margin-top: 10px !important;
        }


        /*Pedidos*/

        table {
            width: 75vw !important;
            border-collapse: collapse !important;
            margin: 50px auto !important;
        }

        select {
            color: black !important;
        }

        th {
            background: #3498db !important;
            color: black !important;
            font-weight: bold !important;
        }

        td, th {
            padding: 10px !important;
            border: 1px solid #ccc !important;
            text-align: left !important;
            font-size: 18px !important;
        }

        .labels tr td {
            background-color: #CA696A !important;
            font-weight: bold !important;
            color: #fff !important;
        }

        .label tr td label {
            display: block !important;
        }


        [data-toggle="toggle"] {
            display: none !important;
        }


        /*Sidebar*/
        .nav-max {
            background-color: white !important;
            height: 100vh;
            position: fixed;
            padding: 10px 15px;
            margin-top: 0 !important;
            border: 1px solid #ca696a;
            border-top: 0;
        }

            .nav-max header {
                display: flex;
                align-items: center;
                gap: 30px;
            }

            .nav-max header > .box {
                background: lightblue;
            }

            .nav-max ul {
                list-style: none;
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            .nav-max a {
                text-decoration: none;
                height: 100%;
                width: 100%;
                display: flex;
                align-items: center;
                gap: 20px;
            }

            .nav-link:hover {
                background-color: #ca696a !important;
                text-decoration: none;
                height: 100%;
                width: 100%;
                display: flex;
                align-items: center;
                gap: 20px;
            }

            .nav-link{
                transition: none !important;
            }

            .nav-link:hover > div {
                background-color: #ca696a !important;
            }

            .nav-link:hover > span {
                background-color: #ca696a !important;
            }

        .nav-min {
            width: 80px;
            transition: ease-in-out 0.7s;
        }

            .nav-min h1, .nav-min {
                opacity: 0;
                visibility: hidden;
                transition: 1s;
            }

        .nav-max {
            width: 300px;
            transition: ease-in-out 0.7s;
            padding: 0;
        }

        #toggle-nav-btn {
            right: -12px;
            position: absolute;
            border: solid grey 2px;
            background-color: white !important;
        }


        /* ==shapes== */
        .box {
            background-color: white !important;
            min-width: 50px;
            max-width: 50px;
            height: 50px;
            border-radius: 10px;
        }

        .circle {
            background: #36393f;
            width: 25px;
            height: 25px;
            border-radius: 50%;
        }

        .nav-max hr {
            background: #ca696a !important;
            opacity: 0.8 !important;
            width: 95%;
            height: 2px;
            display: block;
            border-radius: 196px;
            border: none;
            position: relative;
            bottom: 10px;
            margin-bottom: 20px;
        }

        #nav-header, .ul {
            overflow: hidden;
        }

    </style>
}

